<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/canceled_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Jayaagar" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/canceled_hotel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#444343"
                android:textSize="@dimen/text_size_medium"
                tools:text="Heritage" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/canceled_hotel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#888888"
                android:textSize="16sp"
                tools:text="Jayaagar metro station , near market" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/canceled_hotel_room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="#444343"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Deluxe" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/canceled_hotel_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="#f03f3f"
                android:textSize="18sp"
                tools:text="Rs.500" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>