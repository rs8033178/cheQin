<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/utellogo" />

                <com.cheqin.booking.utils.CustomFontTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:visibility="gone"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="The Hotelier App"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_curr_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="15">

                            <com.cheqin.booking.utils.CustomFontEdittext
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="7dp"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/group_row1"
                                android:clickable="false"
                                android:ems="10"
                                android:hint="Email"
                                android:maxLength="50"
                                android:maxLines="1"

                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true"
                                android:textSize="15dp" />

                            <ImageView
                                android:id="@+id/check_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="14"
                                android:src="@drawable/check"
                                android:visibility="gone" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:visibility="visible"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.cheqin.booking.utils.CustomFontEdittext
                                android:id="@+id/editText2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="7dp"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="2.2"
                                android:background="@drawable/group_row1"
                                android:clickable="false"
                                android:ems="10"
                                android:hint="Password"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true"
                                android:textSize="15dp" />

                       <ImageView
                                android:id="@+id/invisible_butt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight=".80"
                                android:src="@drawable/ic_visibility_black_18dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/visible_butt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight=".80"
                                android:src="@drawable/ic_visibility_black_18dp"
                                android:tint="#808080"
                                android:visibility="gone" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/rememberme"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="Remember me"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:id="@+id/forgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_horizontal"
                        android:paddingTop="6dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="6dp"
                        android:text="Forgot password?"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <com.cheqin.booking.utils.CustomFontButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_login_bg"
                    android:onClick="onLogin"
                    android:text="Log in"
                    android:textColor="@color/white" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="30dp"
                    android:background="#E6E6E6" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">


                    <com.cheqin.booking.utils.CustomFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="4dp"
                        android:text="New user? "
                        android:textColor="@color/material_blue_grey_80"
                        android:textSize="16sp" />

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:id="@+id/tv_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:background="@color/colorPrimaryDark"
                        android:onClick="signup"
                        android:padding="4dp"
                        android:text="Create Account"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>



