<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/networkimage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/noimage"
                        android:scaleType="fitXY" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#80000000"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true">

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Offer Price : "
                        android:textColor="@color/white" />

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="New Text"
                        android:textColor="@color/white" />


                </LinearLayout>

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/hotelname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/hoteladdress"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:text="New Text"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/hoteladdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="New Text"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="distance"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="#80000000"
                    android:layout_marginBottom="2dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/textView40"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="City"
                    android:textColor="@android:color/black" />

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/hotelcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="New Text"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.cheqin.booking.utils.CustomFontTextview
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Expires in"
                    android:textColor="@android:color/black" />

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/expiry_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="New Text"
                    android:textColor="#ff5252" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
