<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_hoteldetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/CustomToolbarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="30dp"
                android:paddingRight="15dp">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:text="Hotel Details"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="20dp" />-->

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/edittext"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/group_row"-->
                <!-->-->

                <!--<EditText-->
                <!--android:id="@+id/code"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Enter code"-->
                <!--android:ellipsize="start"-->
                <!--android:gravity="center"-->
                <!--/>-->

                <!--</android.support.design.widget.TextInputLayout>-->

                <com.cheqin.booking.utils.CustomFontEdittext
                    android:id="@+id/edt_hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:gravity="center_horizontal"
                    android:hint="Enter Hotel Name"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <com.cheqin.booking.utils.CustomFontEdittext
                    android:id="@+id/edt_hotel_addr"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="Enter Hotel address"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <com.cheqin.booking.utils.CustomFontEdittext
                    android:id="@+id/edt_website"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="Enter Hotel website"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="Enter Bank Name"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edt_branch_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="Enter Branch location"
                    android:maxLength="20"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edt_account_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="Enter Accont Number"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edt_ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_row"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="Enter IFSC Code"
                    android:maxLength="20"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/hoteltype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:text="Hotel Class"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:id="@+id/hoteltype_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:text="select"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/amenittype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:text="Amenities"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <com.cheqin.booking.utils.CustomFontTextview
                        android:id="@+id/amenitytype_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:text="New Text"
                        android:textColor="#ffffff"
                        android:visibility="gone" />
                </LinearLayout>

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/txt_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Click to add Hotel image"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/hotel_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.cheqin.booking.utils.CustomFontTextview
                            android:id="@+id/hotelnotfound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Select Hotel name and location"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_search" />
                    </LinearLayout>

                    <fragment
                        android:id="@+id/map_details"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="10dp" />
                </androidx.cardview.widget.CardView>

                <com.cheqin.booking.utils.CustomFontButton
                    android:id="@+id/save_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_login_plain_bg"
                    android:padding="5dp"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>