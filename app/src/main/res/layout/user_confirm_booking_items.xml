<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirmed_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_medium_plus"
                android:textStyle="bold"
                tools:text="Jayanagar Metro Station" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/confirmed_hotel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#444343"
                android:textSize="@dimen/text_size_medium"
                tools:text="Heritage" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/confirmed_hotel_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="New Text"
                android:textColor="#888888"
                android:textSize="17sp"
                tools:text="Rashtriya Vidyalaya Road, Jayanagar East, Jayanagar, Bengaluru" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/confirmed_hotel_room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textColor="#444343"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Deluxe" />

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/confirmed_hotel_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textColor="#f03f3f"
                android:textSize="18sp"
                tools:text="Booking Price : INR 4300" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/chk_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#444343"
                    android:textSize="17sp"
                    tools:text="Check in\n10 Jan 2019" />

                <com.cheqin.booking.utils.CustomFontTextview
                    android:id="@+id/chk_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#444343"
                    android:textSize="17sp"
                    tools:text="Check out\n12 Jan 2019" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.cheqin.booking.utils.CustomFontTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="@string/contact_hotel_directly_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/callIB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_plain_white_bg"
                    android:padding="5dp"
                    android:src="@android:drawable/sym_action_call"
                    android:tint="@color/red" />


                <ImageButton
                    android:id="@+id/smsIB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_plain_white_bg"
                    android:padding="5dp"
                    android:src="@android:drawable/stat_notify_chat"
                    android:tint="@color/red" />

                <ImageView
                    android:id="@+id/whatappIB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_plain_white_bg"
                    android:padding="5dp"
                    android:src="@drawable/whatapp" />

                <ImageButton
                    android:id="@+id/emailIB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_plain_white_bg"
                    android:padding="5dp"
                    android:src="@android:drawable/sym_action_email"
                    android:tint="@color/red" />

                <ImageView
                    android:id="@+id/uberIB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_plain_white_bg"
                    android:padding="8dp"
                    android:src="@drawable/uber" />

                <ImageView
                    android:id="@+id/directionIB"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_plain_white_bg"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:rotation="40"
                    android:src="@drawable/ic_navigation"
                    android:tint="@color/google_review_color" />

            </LinearLayout>

            <com.cheqin.booking.utils.CustomFontTextview
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/cancel_button"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:text="Cancel Booking"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="normal" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>